<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2C2C31"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:padding="10dp"
        android:text="0"
        android:textColor="#2ecc71"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:targetApi="o" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="AC"
            android:onClick="ButtonClick"
            android:layout_margin="1dp"
            android:textColor="#2ecc71"
            android:background="#636e72"
            android:textSize="30dp"
            android:layout_marginLeft="0dp">
        </Button>
        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="x"
            android:onClick="ButtonClick"
            android:layout_margin="1dp"
            android:textColor="#2ecc71"
            android:background="#636e72"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/sub"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="/"
            android:onClick="ButtonClick"
            android:layout_margin="1dp"
            android:textColor="#2ecc71"
            android:background="#636e72"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="â†"
            android:onClick="ButtonClick"
            android:layout_margin="1dp"
            android:textColor="#2ecc71"
            android:background="#636e72"
            android:textSize="50dp"
            android:layout_marginRight="0dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="7"
            android:onClick="ButtonClick"
            android:layout_margin="1dp"
            android:textColor="#2ecc71"
            android:background="#636e72"
            android:textSize="30dp"
            android:layout_marginLeft="0dp">
        </Button>
        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="8"
            android:onClick="ButtonClick"
            android:layout_margin="1dp"
            android:textColor="#2ecc71"
            android:background="#636e72"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="9"
            android:onClick="ButtonClick"
            android:layout_margin="1dp"
            android:textColor="#2ecc71"
            android:background="#636e72"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/min"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="+"
            android:onClick="ButtonClick"
            android:layout_margin="1dp"
            android:textColor="#2ecc71"
            android:background="#636e72"
            android:textSize="30dp"
            android:layout_marginRight="0dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="4"
            android:onClick="ButtonClick"
            android:layout_margin="1dp"
            android:textColor="#2ecc71"
            android:background="#636e72"
            android:textSize="30dp"
            android:layout_marginLeft="0dp">
        </Button>
        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="5"
            android:onClick="ButtonClick"
            android:layout_margin="1dp"
            android:textColor="#2ecc71"
            android:background="#636e72"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="6"
            android:onClick="ButtonClick"
            android:layout_margin="1dp"
            android:textColor="#2ecc71"
            android:background="#636e72"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="-"
            android:onClick="ButtonClick"
            android:layout_margin="1dp"
            android:textColor="#2ecc71"
            android:background="#636e72"
            android:textSize="30dp"
            android:layout_marginRight="0dp">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:text="1"
                    android:onClick="ButtonClick"
                    android:layout_marginLeft="0dp"
                    android:layout_margin="1dp"
                    android:background="#636e72"
                    android:textColor="#2ecc71"/>
                <Button
                    android:id="@+id/two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:text="2"
                    android:onClick="ButtonClick"
                    android:layout_margin="1dp"
                    android:background="#636e72"
                    android:textColor="#2ecc71"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="30dp"
                    android:text="0"
                    android:onClick="ButtonClick"
                    android:layout_marginLeft="0dp"
                    android:layout_margin="1dp"
                    android:background="#636e72"
                    android:textColor="#2ecc71"/>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <Button
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:onClick="ButtonClick"
                    android:textSize="30dp"
                    android:layout_margin="1dp"
                    android:background="#636e72"
                    android:textColor="#2ecc71"/>
                <Button
                    android:id="@+id/spot"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:text="."
                    android:onClick="ButtonClick"
                    android:textSize="30dp"
                    android:layout_margin="1dp"
                    android:background="#636e72"
                    android:textColor="#2ecc71"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/equal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#636e72"
                    android:text="="
                    android:onClick="ButtonClick"
                    android:textColor="#2ecc71"
                    android:textSize="40dp"
                    android:layout_marginRight="0dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>